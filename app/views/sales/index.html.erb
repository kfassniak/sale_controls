<p id="notice"><%= notice %></p>

<h1>Listing Sales</h1>

<table>
	<thead>
	<tr>
		<th>Customer name</th>
		<th>Merchant address</th>
		<th>Merchant name</th>
		<th></th>
	</tr>
	</thead>

	<tbody>
	<% @sales.each do |sale| %>
		<tr>
		<td><%= sale.customer_name %></td>
		<td><%= sale.merchant_address %></td>
		<td><%= sale.merchant_name %></td>
		<td><%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
	</tbody>
</table>

<br>
